<!DOCTYPE html>
<html>
    <%- include('./partials/head.ejs') %>
  <body>
    <!-- Navbar (sit on top) -->
      <%- include('./partials/navBar.ejs') %>

    <!-- Header -->
    <%- include('./partials/header.ejs') %>

    <!-- Page content -->
    <div class="ps-content">
      </div>
      <!-- Menu Section2 -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%= plate.title %></h1>
          <br />
          <h4> <%= plate.description %></h4>
          <p class="ps-text-grey">
            U$S <%= plate.price %>
          </p>
          <img src="/images/<%= plate.image %>" alt="">
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include('./partials/footer.ejs') %>
    </div>
  </body>
</html>
